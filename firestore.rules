rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Helper function to check if a user is part of a match
    function isMatchParticipant(matchDoc) {
      return request.auth != null && (request.auth.uid == matchDoc.user1Id || request.auth.uid == matchDoc.user2Id);
    }
    
    // User Profiles
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow read, update: if isOwner(userId);
      // Public read for some fields can be enabled if needed, e.g. for profile cards
      // allow get: if request.auth != null; 
    }

    // Matches and Messages
    match /matches/{matchId} {
      allow read, create, update: if isMatchParticipant(resource.data);

      // Messages subcollection
      match /messages/{messageId} {
        // Only participants of the parent match can read/write messages
        allow read, create, update: if isMatchParticipant(get(/databases/$(database)/documents/matches/$(matchId)).data);
      }
    }
  }
}
