rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      // New users can create their own profile document.
      allow create; 
      
      // Only the owner of the profile can read, update, or delete their own document.
      allow read, update, delete: if isOwner(userId);

      // Allow authenticated users to list matches (for discovery, etc.)
      match /matches/{matchId} {
        allow read: if request.auth != null;
        allow write, delete: if isOwner(userId);
      }
    }

    match /matches/{matchId} {
      // A user can get a match document if they are one of the participants.
      allow get: if request.auth != null && (resource.data.user1Id == request.auth.uid || resource.data.user2Id == request.auth.uid);
      
      // A user can update a match document (e.g., to like/dislike) if they are a participant.
      allow write: if request.auth != null && (request.resource.data.user1Id == request.auth.uid || request.resource.data.user2Id == request.auth.uid);

      // Messages can only be read or written by the two users in the match.
      match /messages/{messageId} {
        allow read, write: if request.auth != null && (get(/databases/$(database)/documents/matches/$(matchId)).data.user1Id == request.auth.uid || get(/databases/$(database)/documents/matches/$(matchId)).data.user2Id == request.auth.uid);
      }
    }

    match /reports/{reportId} {
      // Any authenticated user can create a report.
      allow create: if request.auth != null;
    }

    // Admins have full access to all data for management purposes.
    // This rule assumes you have a custom claim 'isAdmin' set to true for admin users.
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
